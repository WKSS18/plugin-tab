{
    "name": "SearchTab",
    "description": "Tab",
    "version": "2.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "popup.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "mac": "MacCtrl+Q"
            },
            "description": ""
        }
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*",
        "cookies"
    ],
    "optional_permissions": ["tabs", "cookies"]
}